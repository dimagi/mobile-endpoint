<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "{{ dtd_path }}" []>
<tsung loglevel="info">
    <clients>
        <client host="localhost" use_controller_vm="true" maxusers="1000"/>
    </clients>

    <servers>
        <server host="{{ hq_host }}" port="{{ hq_port }}" type="tcp"></server>
    </servers>

    <load>
        <arrivalphase phase="1" duration="{{ duration }}" unit="second">
            <users arrivalrate="{{ arrival_rate}}" unit="second"></users>
        </arrivalphase>
    </load>

    <options>
        <option name="file_server" id="casedb" value="{{ casedb }}"></option>
        <option name="file_server" id="formdb" value="{{ formdb }}"></option>
    </options>

    <sessions>

        <session probability="50" name="form-submission-new-case" type="ts_http">
            <!--
            TODO:
                - Figure out how to populate the formdb.
                - use a random form_xml?
            -->
            <setdynvars sourcetype="file" fileid="formdb" delimiter="," order="random">
                <var name="username" />
                <var name="user_id" />
                <!--<var name="form_xml" />-->
            </setdynvars>
            <setdynvars sourcetype="random_string" length="32">
                <var name="case_id" />
            </setdynvars>
            <setdynvars sourcetype="random_string" length="32">
                <var name="form_instance_id" />
            </setdynvars>


            <request subst="true">
                <http
                    url="/a/foo-proj/receiver/{{ hq_app_id }}/"
                    method="POST"
                    version="1.1"
                    contents_from_file="{{ create_submission }}"
                ></http>
            </request>
        </session>

        <session probability="50" name="form-submission-update-case" type="ts_http">


            <setdynvars sourcetype="file" fileid="casedb" delimiter="," order="random">
                <var name="case_id" />
            </setdynvars>
            <setdynvars sourcetype="file" fileid="formdb" delimiter="," order="random">
                <var name="username" />
                <var name="user_id" />
            </setdynvars>
            <setdynvars sourcetype="random_string" length="32">
                <var name="form_instance_id" />
            </setdynvars>

            <request subst="true">
                <http
                    url="/a/foo-proj/receiver/{{ hq_app_id }}/"
                    method="POST"
                    version="1.1"
                    contents_from_file="{{ update_submission }}"
                ></http>
            </request>
        </session>

        <!-- TODO: QUESTION: Will these form trigger the sync log updates?-->

    </sessions>
</tsung>

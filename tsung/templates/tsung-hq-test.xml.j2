<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "{{ dtd_path }}" []>
<tsung loglevel="info">
    <clients>
        <client host="localhost" use_controller_vm="true" maxusers="1000"/>
    </clients>

    <servers>
        <server host="{{ host }}" port="{{ port }}" type="tcp"></server>
    </servers>

    <load>
        {% for phase in phases %}
        <arrivalphase phase="{{ loop.index }}" duration="{{ phase.duration }}" unit="second">
            <users arrivalrate="{{ phase.arrival_rate}}" unit="second"></users>
        </arrivalphase>
        {% endfor %}
    </load>

    <options>
        <option name="file_server" id="casedb" value="{{ casedb }}"></option>
        <option name="file_server" id="userdb" value="{{ userdb }}"></option>
    </options>

    <sessions>

        <session probability="40" name="form-submission-new-case" type="ts_http">

            <setdynvars sourcetype="file" fileid="userdb" delimiter="," order="random">
                <var name="user_id" />
                <var name="username" />
                <var name="password" />
            </setdynvars>

            <setdynvars sourcetype="eval"
                    code="fun({Pid,DynVars})->
                              uuid:random_str() end.">
              <var name="case_id" />
            </setdynvars>

            <setdynvars sourcetype="eval"
                    code="fun({Pid,DynVars})->
                              uuid:random_str() end.">
              <var name="form_instance_id" />
            </setdynvars>

            <transaction name="submit_case_creation_form">
                <request subst="true">
                    <http
                        url="{{ submission_url }}"
                        method="POST"
                        version="1.1"
                        contents_from_file="{{ create_submission }}"
                    >
                        {% if do_auth %}
                        <www_authenticate userid="%%_username%%" passwd="%%_password%%"/>
                        {% endif %}
                        <http_header name="Content-Type" value="application/xml"/>
                    </http>
                </request>
            </transaction>
        </session>

        <session probability="40" name="form-submission-update-case" type="ts_http">

            <setdynvars sourcetype="file" fileid="userdb" delimiter="," order="random">
                <var name="user_id" />
                <var name="username" />
                <var name="password" />
            </setdynvars>

            <setdynvars sourcetype="file" fileid="casedb" delimiter="," order="random">
                <var name="case_id" />
            </setdynvars>

            <setdynvars sourcetype="eval"
                    code="fun({Pid,DynVars})->
                              uuid:random_str() end.">
              <var name="form_instance_id" />
            </setdynvars>

            <transaction name="submit_case_update_form">
                <request subst="true">
                    <!-- TODO: Confirm that http tag works on an https url -->
                    <!-- NOTE: For some reason the couch request above seems to bork the host setting, which is why I need to set the host in the following url explicitly -->
                    <http
                        url="{{ submission_url }}"
                        method="POST"
                        version="1.1"
                        contents_from_file="{{ update_submission }}"
                    >
                        {% if do_auth %}
                        <www_authenticate userid="%%_username%%" passwd="%%_password%%"/>
                        {% endif %}
                        <http_header name="Content-Type" value="application/xml"/>
                    </http>
                </request>
            </transaction>
        </session>


        <session probability="10" name="sync" type="ts_http">

            <setdynvars sourcetype="file" fileid="userdb" delimiter="," order="random">
                <var name="user_id" />
                <var name="username" />
                <var name="password" />
            </setdynvars>

            <!-- TODO: create docs for each user before running tsung -->
            <!-- TODO: create db and design doc for synclogs before running tsung-->

            <!-- Get last sync id for user -->
            <request subst="true">
              <dyn_variable name="last_sync_id" jsonpath="$.rows[0].value"></dyn_variable>
              <dyn_variable name="couch_doc_id" jsonpath="$.rows[0].id"></dyn_variable>
                <dyn_variable name="rev" jsonpath="$.rows[0].doc._rev"></dyn_variable>
              <http url="{{ local_sync_log_db_url }}?key=%22%%_user_id%%%22"
                    method="GET"
                    version="1.0"
              ></http>
            </request>

            <!-- do a sync -->
            <transaction name="restore">
                <request subst="true">
                    <dyn_variable name="new_sync_id"></dyn_variable>
                    <http url="{{ restore_url }}?version=2.0&items=true&user_id=%%_user_id%%&since=%%_last_sync_id%%"
                          method="GET"
                          version="1.1"
                    >
                        {% if do_auth %}
                        <www_authenticate userid="%%_username%%" passwd="%%_password%%"/>
                        {% endif %}
                        <http_header name="Content-Type" value="application/xml"/>
                    </http>
                </request>
            </transaction>

            <!-- save the new sync tokem -->
            <request subst="true">
                <http url="{{ local_sync_log_update_url }}%%_couch_doc_id%%"
                      method="POST"
                      version="1.1"
                      contents="{'id':'%%_couch_doc_id%%', '_rev':'%%_rev%%', 'user_id':'%%_user_id%%', 'restore_id':'%%_new_sync_id%%'}"
                >
                    <http_header name="Content-Type" value="application/json"/>
                </http>
            </request>

        </session>

    </sessions>
</tsung>

<transaction name="get_related_cases">
    <request subst="true">
        <match do="dump" when="match">total_rows</match>
        <match do="dump" when="nomatch">total_rows</match>
        <http method="GET" url="http://{{ host }}:{{ port }}/{{ couch_case_db }}/_design/cases/_view/related?startkey%3D%5B%22%%_domain%%%22%2C%22%%_case_id%%%22%2C%5D%26endkey%3D%5B%22%%_domain%%%22%7B%7D%5D"></http>
    </request>
</transaction>

